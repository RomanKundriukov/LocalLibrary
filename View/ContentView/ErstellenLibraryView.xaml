                <DataTemplate>
                    <FlexLayout>
                        <Label 
                            Text="{Binding AllDisks}"
                            TextColor="White"
                            FontSize="24"/> 
                    </FlexLayout>
                    
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>-->
        
        
    </Grid>
</ContentPage>