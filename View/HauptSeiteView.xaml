<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="LocalLibrary.View.HauptSeiteView"
            xmlns:content="clr-namespace:LocalLibrary.View.ContentView"
            xmlns:navigtionsPanel="clr-namespace:LocalLibrary.View.NavigationsPanelView"
            FlyoutLayoutBehavior="Default">

    <FlyoutPage.Flyout>
        <navigtionsPanel:NavigationsPanelView x:Name="flyoutPage"/>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <content:StartContentView />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>