<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LocalLibrary.Views.ContentView.StartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:LocalLibrary.Models"
    xmlns:viewmodel="clr-namespace:LocalLibrary.ViewModels.ContentViewModel"
    BackgroundImageSource="background_ocean.png"
    NavigationPage.HasNavigationBar="True">

    <VerticalStackLayout Padding="10" Spacing="10">
        <HorizontalStackLayout
            HorizontalOptions="FillAndExpand"
            Spacing="10"
            VerticalOptions="StartAndExpand">

            <FlexLayout Margin="10" Padding="10">
                <Image
                    HeightRequest="90"
                    Source="logo.png"
                    WidthRequest="90" />
                <Label
                    FontFamily="de"
                    FontSize="36"
                    Text="Local Library"
                    VerticalTextAlignment="Center" />
            </FlexLayout>
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Border
                BackgroundColor="#d2cfec"
                HeightRequest="450"
                Opacity="0.6"
                WidthRequest="350"
                ZIndex="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout
                    Padding="10"
                    BackgroundColor="Transparent"
                    Opacity="1"
                    Spacing="10"
                    ZIndex="1">

                    <Picker
                        Title="Выберите диск"
                        BackgroundColor="#ffffff"
                        ItemsSource="{Binding AllDriversCollections}"
                        SelectedIndex="0"
                        SelectedItem="{Binding AuswehlteElement}"
                        TextColor="Black"
                        TitleColor="Black" />

                    <Entry
                        BackgroundColor="#ffffff"
                        Placeholder="Введите имя"
                        PlaceholderColor="Black"
                        Text="{Binding AllgemeinName}"
                        TextColor="Black" />

                    <Button
                        BackgroundColor="#6948bc"
                        Command="{Binding erstellungDirectoryCommand}"
                        Opacity="1"
                        Text="Создать"
                        TextColor="Black" />

                    <Button
                        BackgroundColor="#6948bc"
                        Command="{Binding IconLibraryUploaadCommand}"
                        Opacity="1"
                        Text="Загрузить изображение"
                        TextColor="Black" />

                    <Image
                        HeightRequest="120"
                        IsVisible="{Binding FotoIsUpload}"
                        Source="{Binding ImageSource}"
                        WidthRequest="120" />
                </VerticalStackLayout>
            </Border>

            <Border
                BackgroundColor="#d2cfec"
                HeightRequest="450"
                Opacity="0.6"
                WidthRequest="350"
                ZIndex="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout
                    Padding="10"
                    BackgroundColor="Transparent"
                    Opacity="1"
                    Spacing="10"
                    ZIndex="1">

                    <Grid>
                        <CollectionView
                            BackgroundColor="Wheat"
                            HeightRequest="250"
                            ItemsSource="{Binding Collections}"
                            SelectionMode="Multiple">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            HeightRequest="90"
                                            Source="{Binding LibraryIcon}"
                                            WidthRequest="90" />
                                        <Label
                                            Grid.Column="1"
                                            FontSize="24"
                                            Text="{Binding LibraryName}"
                                            TextColor="Black"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>


                    <Button
                        BackgroundColor="#6948bc"
                        Opacity="1"
                        Text="Открыть"
                        TextColor="Black" />

                    <Button
                        BackgroundColor="#6948bc"
                        Opacity="1"
                        Text="Удалить"
                        TextColor="Black" />

                    <ImageButton
                        Clicked="Refresh"
                        HeightRequest="50"
                        HorizontalOptions="StartAndExpand"
                        Source="reload.png" />
                </VerticalStackLayout>
            </Border>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>