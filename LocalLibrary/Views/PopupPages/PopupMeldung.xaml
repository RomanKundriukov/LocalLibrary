<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="LocalLibrary.Views.PopupPages.PopupMeldung"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:LocalLibrary.ViewModels.PopupViewModel"
    x:DataType="viewmodel:PopupMeldungViewModel">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{Binding Meldung}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</toolkit:Popup>